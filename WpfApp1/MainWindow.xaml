<Window x:Class="WpfApp1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp1"
        xmlns:corlib="clr-namespace:System;assembly=mscorlib"
        mc:Ignorable="d"
        Title="MainWindow" Height="400" Width="600">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <StackPanel Grid.Row="0" Grid.Column="0">
            <Button x:Name="buttonSkew" Content="Скос" Click="ButtonSkew_OnClick"/>
            <Button x:Name="buttonRotate" Content="Поворот" Click="ButtonRotate_OnClick"/>
            <Button x:Name="buttonFlip" Content="Кувфрок" Click="ButtonFlip_OnClick"/>
        </StackPanel>
        <Canvas x:Name="myCanvas" Grid.Row="0" Grid.Column="1">
            <Ellipse HorizontalAlignment="Left" VerticalAlignment="Top" Height="180" Width="80" Stroke="Black" Canvas.Left="20" Canvas.Top="30">
                <Ellipse.Fill>
                    <RadialGradientBrush>
                        <GradientStop Color="BlueViolet" Offset="0"/>
                        <GradientStop Color="Aqua" Offset="1"/>
                    </RadialGradientBrush>
                </Ellipse.Fill>
            </Ellipse>
            <Ellipse HorizontalAlignment="Left" VerticalAlignment="Top" Height="100" Width="100" Stroke="Black" Canvas.Left="120" Canvas.Top="50">
                <Ellipse.Fill>
                    <LinearGradientBrush EndPoint="0,1" StartPoint="0,0">
                        <GradientStop Color="Aqua" Offset="0"/>
                        <GradientStop Color="Chocolate" Offset="1"/>
                    </LinearGradientBrush>
                </Ellipse.Fill>
            </Ellipse>
        </Canvas>
    </Grid>
</Window>
